@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<h2>Вход</h2>

<form asp-action="Login" method="post">
    <div class="form-group">
        <label asp-for="Login">Username or Email</label>
        <input asp-for="Login" class="form-control" />
        <span asp-validation-for="Login" class="text-danger"></span>
    </div>

    <div class="form-group position-relative">
        <label asp-for="Password"></label>
        <input asp-for="Password" id="loginPassword" class="form-control" />
        <button type="button" class="btn btn-sm btn-outline-secondary position-absolute" style="right:5px; top:32px;" onclick="togglePassword('loginPassword')">👁</button>
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Войти</button>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePassword(id){
            var el = document.getElementById(id);
            if(!el) return;
            el.type = (el.type === "password") ? "text" : "password";
        }
    </script>
}